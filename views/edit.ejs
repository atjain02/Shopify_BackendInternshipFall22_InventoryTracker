<!DOCTYPE html>
<html>
   <%- include('./partials/head.ejs') %>
   <body>
        <%- include('./partials/nav.ejs') %>
        <div class="create-item content">
            <form action="<%=`/edit/${item.id}`%>" method="POST">
              <label for="name">Item name:</label>
              <input type="text" id="name" name="name" value="<%= item.name %>" required>
              <label for="quantity">Item quantity:</label>
              <input type="number" id="quantity" name="quantity" value="<%= item.quantity %>" required>
              <label for="details">Item details:</label>
              <textarea id="details" name="details"><%= item.details %></textarea>
              <label for="warehouse">Warehouse:</label>
              <input id="warehouse" name="warehouse" value="<%= item.warehouse %>" required></input>
              <button>Submit</button>
            </form>
        </div>
   </body>
</html>
